@using form.Entities.ValueObject
@model LoginViewModel
@{
                /**/

                ViewBag.Title = "Login";
}
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->


@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Giriş Formu </h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "emailinizi giriniz", type = "text" })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.sifre, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })

                    </div>



                    <div class="form-group ">
                        <button href="#" type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş</button>
                    </div>


                </div>
            </div>
        </div>
    </section>
}
